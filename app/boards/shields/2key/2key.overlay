#include <dt-bindings/zmk/matrix-transform.h>

/ {
	chosen {
		zmk,kscan = &kscan0;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-direct";
		label = "KSCAN";

		input-gpios
			= <&gpioa 0 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			, <&gpioa 1 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>
			;
	};
};

